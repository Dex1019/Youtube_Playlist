<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGrey"
    tools:context=".activities.ProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_pic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/person_profile"
        app:civ_border_color="#000"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profile_name_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_pic"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="Profile Name:"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_name_lable"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="Jon Doe"
        android:textSize="18dp" />


    <TextView
        android:id="@+id/profile_gender_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_name"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="Gender:"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/profile_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_gender_lable"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="Male"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/profile_age_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_gender"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="Age:"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/profile_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_age_lable"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="21"
        android:textSize="18dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp"
        android:background="@drawable/button_outline"
        android:padding="10dp"
        android:text="Update Profile" />

</RelativeLayout>